@model Sports_Merchandise_Store.Models.PlayerDTO
@{ 
    ViewBag.Title = "Create";
}

<div><a href="/Player/List">Cancel</a></div>

<h2>Create New Player</h2>
<form action="/Player/Create" method="POST">
    <div>
        <label>Player Name</label>
        <input type="text" name="PlayerName" />
    </div>
    <div>
        <label>Position</label>
        <input type="text" name="PlayerPosition" />
    </div>
    <div>
        <label>Shirt Number</label>
        <input type="text" name="ShirtNumber" />
    </div>
    <div>
        <label>Current Club</label>
        @Html.DropDownListFor(t => t.PlayerTeamId, (SelectList)ViewBag.Teams, "Select a Club" )
    </div>
    <button type="submit">Add Player</button>
</form>
