@model Sports_Merchandise_Store.Models.F1_Team

@{
    ViewBag.Title = "New";
}

<style>
    body {
        background-image: url('https://github.com/jerryborgesjacob/HTTP5122/blob/main/f1-austria.png?raw=true');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div class="delete-page">
    <h2>Add Team</h2>
    <form action="/F1_Team/Create" method="POST">
        <div>
            <label>Team Name:</label> <input type="text" name="F1TeamName" required />
        </div>
        <div>
            <label>Engine Supplier:</label> <input type="text" name="EngineSupplier" required />
        </div>
        <div>
            <label>Country:</label> <input type="number" name="Country" required />
        </div>
        <div>
            <label>F1 Team Image</label>
            <input type="text" name="F1_TeamImageUrl" placeholder="Enter  Image URL" />
        </div>
        <div>
            <input type="submit" value="Add Team" />
        </div>
    </form>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
