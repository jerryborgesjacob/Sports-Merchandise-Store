@model Sports_Merchandise_Store.Models.F1MerchandiseDTO

@{
    ViewBag.Title = "Edit";
}

<h2>Update @Model.ItemName</h2>
<nav>
    <ul>
        <li><a href="/F1Merchandise/List">Cancel</a></li>
        <li><a style="color: red" href="/F1Merchandise/DeleteConfirm/@Model.F1TeamId">Delete</a></li>
    </ul>
</nav>
<form action="/F1Merchandise/Update/@Model.ItemId" method="POST">
    <input type="hidden" name="ItemId" value="@Model.ItemId" />
    <div>
        <label>Item Name</label>
        <input type="text" name="ItemName" value="@Model.ItemName" />
    </div>
    <div>
        <label>Item Type</label>
        <input type="text" name="ItemType" value="@Model.ItemType" />
    </div>
    <div>
        <label>Price</label>
        <input type="number" name="Price" value="@Model.Price" />
    </div>
    <div>
        <button type="submit">Update Item</button>
    </div>
</form>

